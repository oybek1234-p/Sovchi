<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/day_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/dimen_8"
            android:background="@drawable/round_lay"
            android:backgroundTint="?colorSurfaceContainer"
            android:paddingHorizontal="@dimen/dimen_8"
            android:paddingVertical="@dimen/dimen_6"
            android:text="29 avgust"
            android:textColor="?colorOnSurface"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/dimen_4"
            android:paddingVertical="@dimen/dimen_4">

            <FrameLayout
                android:id="@+id/photo_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/photo_view"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="?colorSurfaceContainer"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RadiusImageView12" />

                <ProgressBar
                    android:id="@+id/photo_loading"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen_18"
                    android:background="@drawable/round_lay"
                    android:backgroundTint="#4F000000"
                    android:indeterminateTint="@color/white"
                    android:padding="@dimen/dimen_8" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_lay"
                android:backgroundTint="?colorSurfaceContainerLowest"
                android:elevation="1dp"
                android:paddingHorizontal="@dimen/dimen_14"
                android:paddingVertical="@dimen/dimen_6">

                <TextView
                    android:id="@+id/message_view"
                    style="@style/Text2_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello World!"
                    android:textColor="?colorOnSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/date_view"
                    style="@style/Caption3_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_15_05"
                    android:textColor="#A2A1A2"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/message_view" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </LinearLayout>
</layout>