<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_24"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/internet_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/internet_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?colorOnSurfaceVariant" />

        <TextView
            android:id="@+id/no_internet"
            android:layout_width="0dp"
            style="@style/Title3_17"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_height="wrap_content"
            android:text="@string/no_internet"
            android:textColor="?colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@+id/internet_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/internet_ic"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18"
            android:text="@string/yopish"
            app:layout_constraintTop_toBottomOf="@+id/internet_ic"
            tools:layout_editor_absoluteX="24dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>