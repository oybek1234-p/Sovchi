<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_24"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notify"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/notify_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?colorPrimary" />

        <TextView
            android:id="@+id/textView5"
            style="@style/Title2_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_24"
            android:text="Sizga habar beramiz"
            android:textColor="?colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@+id/notify"
            app:layout_constraintStart_toEndOf="@+id/notify"
            app:layout_constraintTop_toTopOf="@+id/notify" />

        <TextView
            android:id="@+id/textView6"
            style="@style/Text1_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/check_ic"
            android:drawablePadding="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_24"
            android:text="Belgilangan yosh oraligida nomzod joylansa"
            android:textColor="?colorOnSurface"
            app:layout_constraintStart_toStartOf="@+id/notify"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            style="@style/Text1_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/check_ic"
            android:drawablePadding="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_12"
            android:text="Nomzodingizga boshqa nomzod yoqtirsa"
            android:textColor="?colorOnSurface"
            app:layout_constraintStart_toStartOf="@+id/notify"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView8"
            style="@style/Text1_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/check_ic"
            android:drawablePadding="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_12"
            android:text="Sizga mos juft chiqsa habar beramiz"
            android:textColor="?colorOnSurface"
            app:layout_constraintStart_toStartOf="@+id/notify"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/davom"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/davom_etish"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>