<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include
            layout="@layout/nomzod_item"
            android:id="@+id/nomzod_item" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_view"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:text="Qabul qilindi"
            android:layout_marginTop="@dimen/dimen_4"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="?colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/accept_button"
            android:text="@string/qabul_qilish"
            app:icon="@drawable/check_ic"
            app:iconGravity="textStart"
            style="@style/FilledButton"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginHorizontal="@dimen/dimen_12" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reject_button"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_4"
            app:icon="@drawable/cancel_ic"
            app:iconGravity="textStart"
            android:text="@string/rad_etish"
            style="@style/FilledButton" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/connect_button"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="@string/bog_lanish"
            app:icon="@drawable/telegram_ic"
            app:iconGravity="textStart"
            style="@style/FilledButton" />

    </LinearLayout>
</layout>