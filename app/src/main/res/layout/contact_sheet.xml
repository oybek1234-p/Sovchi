<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kontaktlar"
            style="@style/Title3_17"
            android:textColor="?colorOnSurface"
            android:layout_marginTop="@dimen/dimen_18"
            android:layout_marginStart="@dimen/dimen_18" />

        <LinearLayout
            android:id="@+id/chat_button"
            android:paddingVertical="@dimen/dimen_12"
            android:paddingHorizontal="@dimen/dimen_18"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chat_ic"
                app:tint="?colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat"
                style="@style/Headline2_16"
                android:textColor="?colorOnSurface"
                android:layout_marginStart="@dimen/dimen_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/telegram_button"
            android:paddingVertical="@dimen/dimen_12"
            android:paddingHorizontal="@dimen/dimen_18"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/telegram_ic"
                app:tint="#03A9F4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telegram"
                style="@style/Headline2_16"
                android:textColor="?colorOnSurface"
                android:layout_marginStart="@dimen/dimen_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_button"
            android:paddingVertical="@dimen/dimen_12"
            android:paddingHorizontal="@dimen/dimen_18"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call_ic"
                app:tint="?colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefon_qilish"
                style="@style/Headline2_16"
                android:textColor="?colorOnSurface"
                android:layout_marginStart="@dimen/dimen_12" />
        </LinearLayout>
    </LinearLayout>
</layout>