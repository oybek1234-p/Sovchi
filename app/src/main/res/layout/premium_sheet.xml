<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dimen_18"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView17"
            style="@style/Title4_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium"
            android:textColor="?colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17">

            <TextView
                style="@style/Text2_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filterlarsh"
                android:drawableStart="@drawable/check_ic"
                android:drawableTint="@color/green"
                android:drawablePadding="8dp"
                android:textSize="18sp"
                android:textColor="?colorOnSurface" />

            <TextView
                style="@style/Text2_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/check_ic"
                android:drawablePadding="8dp"
                android:text="@string/chatda_gaplashish"
                android:layout_marginTop="@dimen/dimen_12"
                android:textSize="18sp"
                android:textColor="?colorOnSurface"
                app:drawableTint="@color/green" />

            <TextView
                style="@style/Text2_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:text="@string/reklama_yo_q"
                android:layout_marginTop="@dimen/dimen_12"
                android:textSize="18sp"
                android:textColor="?colorOnSurface"
                app:drawableStartCompat="@drawable/check_ic"
                app:drawableTint="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_view"
                android:text="@string/_35000_sum"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_gravity="center"
                android:textColor="?colorOnSurface"
                style="@style/Title2_20" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24"
                android:id="@+id/button"
                android:text="@string/sotib_olish" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>