<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource">

        <com.uz.sovchi.ui.base.MyToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/nomzod_haqida" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_48">

                <include
                    android:id="@+id/nomzod_view"
                    layout="@layout/nomzod_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/nomzod_view">

                    <TextView
                        android:id="@+id/joylagan_odam_view"
                        style="@style/Text1_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?colorSurface"
                        android:paddingHorizontal="@dimen/dimen_18"
                        android:paddingTop="@dimen/dimen_18"
                        android:paddingBottom="@dimen/dimen_8"
                        android:text="@string/joylagan_odam"
                        android:textColor="?colorOnSurface"
                      />

                    <LinearLayout
                        android:id="@+id/call_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:background="@drawable/rounded_layout"
                        android:backgroundTint="?colorPrimary"
                        android:layout_margin="@dimen/dimen_4"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_18">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/call_ic"
                            app:tint="?colorOnPrimary" />

                        <TextView
                            android:id="@+id/call_view"
                            style="@style/Headline2_16"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dimen_18"
                            android:gravity="center"
                            android:text="@string/telefon_qilish"
                            android:textColor="?colorOnPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/telegram_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0.2dp"
                        android:background="@drawable/rounded_layout"
                        android:backgroundTint="?colorPrimary"
                        android:layout_margin="@dimen/dimen_4"
                        android:elevation="@dimen/dimen_2"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_18">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/telegram_ic"
                            app:tint="?colorOnPrimary" />

                        <TextView
                            android:id="@+id/telegram_view"
                            style="@style/Headline2_16"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dimen_18"
                            android:gravity="center"
                            android:text="@string/telegram"
                            android:textColor="?colorOnPrimary" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:layout_height="wrap_content"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-8679920253502267/3951382909"></com.google.android.gms.ads.AdView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>