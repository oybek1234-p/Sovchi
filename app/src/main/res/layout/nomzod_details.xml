<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?colorSurface"
        tools:ignore="MissingDefaultResource">

        <com.uz.sovchi.ui.base.MyToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/nomzod_haqida" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:paddingHorizontal="@dimen/dimen_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="100dp">

                <FrameLayout
                    android:id="@+id/photo_con"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="@dimen/dimen_18"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    >
                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/photo_pager"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/2"
                        android:textColor="@color/white"
                        style="@style/Headline3_15"
                        android:id="@+id/photo_count_view"
                        android:padding="@dimen/dimen_4"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="@dimen/dimen_18"
                        />
                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_12"
                    android:id="@+id/nomzod_quyish"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:text="Rasmni ko'rish"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/name_age_view"
                            style="@style/Title3_17"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="@dimen/dimen_12"
                            android:layout_gravity="center_vertical"
                            android:layout_toStartOf="@+id/oilaviy_view"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="@string/parametrlar"
                            android:lineSpacingExtra="@dimen/dimen_12"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textColor="?colorOnSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/type_view"
                            app:drawableTint="?colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/oilaviy_view"
                            style="@style/Headline3_15"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="-1dp"
                            android:background="@drawable/round_lay"
                            android:paddingHorizontal="@dimen/dimen_12"
                            android:paddingVertical="@dimen/dimen_4"
                            android:text="@string/oilaviy_holati"
                            android:textColor="?colorPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/type_view" />

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/params_view"
                        style="@style/Text2_15"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/parametrlar"
                        android:layout_marginStart="@dimen/dimen_2"
                        android:layout_marginTop="8dp"
                        android:textColor="?colorOnSurfaceVariant"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/type_view" />

                </LinearLayout>

                <TextView
                    android:id="@+id/farzandlar_view"
                    style="@style/Text2_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    android:text="@string/farzandlar"
                    android:gravity="start"
                    android:paddingStart="@dimen/dimen_2"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:textColor="?colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/type_view" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:background="?backgroundColor"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:paddingHorizontal="@dimen/dimen_12"
                    android:paddingTop="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/manzil_view"
                            style="@style/Headline3_15"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/location_ic"
                            android:drawablePadding="@dimen/dimen_8"
                            android:drawableTint="?colorOnSurface"
                            android:gravity="center"
                            android:text="@string/manzili_toshkent"
                            android:textColor="?colorOnSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/type_view" />

                        <TextView
                            android:id="@+id/millati_view"
                            style="@style/Text2_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_24"
                            android:text="@string/o_zbek"
                            android:textColor="?colorOnSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/type_view" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tgj_view"
                        style="@style/Text2_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_18"
                        android:text="@string/tugilgan_joyi"
                        android:gravity="center"
                        android:drawablePadding="@dimen/dimen_8"
                        android:textColor="?colorOnSurface"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/type_view"
                        app:drawableTint="?colorOnSurfaceVariant" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:background="?backgroundColor"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimen_18"
                        >
                        <TextView
                            android:id="@+id/oqish_view"
                            style="@style/Text2_15"
                            android:drawableStart="@drawable/study_ic"
                            android:drawablePadding="@dimen/dimen_8"
                            android:layout_marginBottom="@dimen/dimen_18"
                            android:gravity="start|center"
                            android:drawableTint="?colorOnSurfaceVariant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/o_qish_malumoti"
                            android:textColor="?colorOnSurface"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/type_view" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/ish_view"
                        style="@style/Text2_15"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginBottom="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/work_ic"
                        android:drawablePadding="@dimen/dimen_8"
                        android:drawableTint="?colorOnSurfaceVariant"
                        android:text="@string/ish_joyi"
                        android:gravity="center_vertical"
                        android:textColor="?colorOnSurface"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/type_view" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?backgroundColor"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qo_shimcha"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    style="@style/Text1_14"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="?colorOnSurfaceVariant"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/dimen_8"
                    android:elevation="1dp"
                    android:backgroundTint="?backgroundColor"
                    >
                    <TextView
                        android:id="@+id/qoshimcha_view"
                        style="@style/Text2_15"
                        android:layout_marginHorizontal="@dimen/dimen_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assalomu Aleykum"
                        android:textColor="?colorOnSurface" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="?backgroundColor"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/talablar"
                    android:id="@+id/talablar_title"
                    style="@style/Text1_14"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:textColor="?colorOnSurfaceVariant"

                    />

                <TextView
                    android:id="@+id/yosh_chegarasi_view"
                    style="@style/Text1_14"
                    android:paddingVertical="@dimen/dimen_10"
                    android:paddingHorizontal="@dimen/dimen_18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/yosh_chegarasi"
                    android:background="@drawable/round_lay_stroke"
                    android:elevation="1dp"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    android:textColor="?colorOnSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/type_view" />


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/talablar_list_view"
                    tools:listitem="@layout/talablar_item"
                    android:paddingBottom="@dimen/dimen_8"
                    android:paddingVertical="4dp"
                    android:elevation="@dimen/dimen_2"
                    />
                <TextView
                    android:id="@+id/imkon_chek_badge_textView"
                    style="@style/Headline3_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:layout_marginHorizontal="@dimen/dimen_12"
                    android:text="@string/imkoniyati_cheklangan"
                    android:textColor="?colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/filters_container" />

                <TextView
                    android:id="@+id/imkon_check_info"
                    style="@style/Headline2_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="@string/talablar"
                    android:textColor="?colorOnSurface"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/type_view" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="?backgroundColor"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/nomzod_view">


                    <TextView
                        android:id="@+id/joylagan_odam_view"
                        style="@style/Text1_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_12"
                        android:textColorHighlight="?attr/colorOnSurfaceVariant"
                        android:text="@string/joylagan_odam"

                        android:layout_marginBottom="12dp"
                        android:textColor="?colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/date_view"
                        style="@style/Text1_14"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_12"
                        android:textColor="?colorOnSurfaceVariant"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/type_view" />

                </LinearLayout>

                <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-8679920253502267/3951382909"></com.google.android.gms.ads.AdView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorSurface"
            android:elevation="@dimen/dimen_12"
            android:paddingHorizontal="@dimen/dimen_12"
            android:paddingVertical="@dimen/dimen_8"
            app:layout_constraintBottom_toBottomOf="@+id/nestedScrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="@dimen/dimen_48"
                android:layout_height="38dp"
                android:id="@+id/callview"
                android:src="@drawable/call_ic"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/round_lay"
                android:backgroundTint="?colorPrimary"
                android:layout_marginEnd="@dimen/dimen_12"
                android:padding="@dimen/dimen_12"
                app:tint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/request_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="@color/white"
                android:text="Telegram" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>