<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_lay"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#6B673AB7"
        android:layout_marginStart="@dimen/dimen_12"
        app:cardBackgroundColor="#36FFFFFF"
        android:layout_marginTop="@dimen/dimen_8"
        >

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="match_parent"
            android:id="@+id/checkbox"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dimen_18"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_18"
            android:layout_height="wrap_content">

        </com.google.android.material.checkbox.MaterialCheckBox>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view"
            style="@style/Subtitle2_14"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_18"
            android:text="@string/samarqand"
            android:textColor="#3C3B3D"
            />
    </com.google.android.material.card.MaterialCardView>
</layout>