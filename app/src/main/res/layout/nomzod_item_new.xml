        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/name_age_view"
            tools:layout_editor_absoluteX="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/oilaviy_view"
                    style="@style/Subtitle1_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_8"
                    android:text="@string/ajrashgan"
                    android:textColor="?colorOnSurface"
                    app:drawableTint="?colorOnSurface"
                    app:layout_constraintStart_toStartOf="@+id/name_age_view"
                    app:layout_constraintTop_toBottomOf="@+id/name_age_view" />

                <TextView
                    android:id="@+id/city_view"
                    style="@style/Subtitle1_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_24"
                    android:drawablePadding="@dimen/dimen_8"
                    android:text="@string/yashash_manzili"
                    android:textColor="?colorOnSurface"
                    app:drawableStartCompat="@drawable/location_ic"
                    app:drawableTint="?colorOnSurface" />

            </LinearLayout>

            <TextView
                android:id="@+id/about_view"
                style="@style/Text2_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingEnd="@dimen/dimen_18"
                android:text="Start to feel it right"
                android:textColor="?colorOnSurface"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <TextView
            android:id="@+id/verified_badge"
            style="@style/Subtitle3_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_12"
            android:background="@drawable/round_lay"
            android:backgroundTint="#F5FDFC"
            android:drawablePadding="@dimen/dimen_4"
            android:textColor="?colorPrimary"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_12"
            android:paddingVertical="@dimen/dimen_2"
            android:text="@string/rasm_haqiqiy"
            app:drawableStartCompat="@drawable/check_ic"
            app:drawableTint="?colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hide_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_18"
            android:padding="@dimen/dimen_12"
            android:visibility="gone"
            android:src="@drawable/visib_off"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photo_View"
            app:tint="?colorOnSurfaceVariant" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>