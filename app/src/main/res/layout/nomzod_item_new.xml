    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18"
        android:background="?colorSurfaceContainerLowest"
        android:paddingBottom="@dimen/dimen_12">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/photo_View"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/rounded_layout"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
            android:id="@+id/spring_dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/dimen_12"
            android:elevation="@dimen/dimen_2"
            app:dampingRatio="0.5"
            app:dotsColor="@color/white"
            app:dotsCornerRadius="12dp"
            app:dotsSize="14dp"
            app:dotsSpacing="6dp"
            app:dotsStrokeColor="@color/white"
            app:dotsStrokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/photo_View"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:stiffness="300" />

        <TextView
            android:id="@+id/photo_count_view"
            style="@style/Caption1_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/dimen_18"
            android:background="@drawable/round_lay"
            android:backgroundTint="#AE1D1B20"
            android:drawableStart="@drawable/photo_ic"
            android:drawablePadding="@dimen/dimen_4"
            android:drawableTint="@color/white"
            android:paddingHorizontal="@dimen/dimen_8"
            android:paddingVertical="@dimen/dimen_2"
            android:text=""
            android:textColor="?colorSurface"
            app:layout_constraintBottom_toBottomOf="@+id/photo_View"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="?colorSurface" />

        <TextView
            android:id="@+id/name_age_view"
            style="@style/Title3_17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_12"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:textColor="?colorOnSurface"
            app:layout_constraintEnd_toStartOf="@+id/hide_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photo_View"
            tools:text="Oybek 21" />

