<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:background="?colorSurfaceContainerLowest"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="?colorSurface"
            android:paddingBottom="80dp"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_24">

            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_back"
                android:layout_marginTop="@dimen/dimen_24"
                android:backgroundTint="?colorSurfaceContainerHigh"
                android:padding="@dimen/dimen_8"
                android:src="@drawable/settings_ic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_view"
                android:layout_width="140dp"
                android:scaleType="centerCrop"
                android:layout_height="140dp"
                android:elevation="2dp"
                android:src="@drawable/user_photo_placeholder"
                android:background="?colorSurfaceVariant"
                android:layout_marginTop="@dimen/dimen_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <TextView
                android:id="@+id/name_view"
                style="@style/Title2_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:text="@string/oybek"
                android:textColor="?colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photo_view" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/status_view"
                style="@style/Subtitle2_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?colorPrimaryVariant"
                app:layout_constraintEnd_toStartOf="@+id/fillPercent"
                app:layout_constraintStart_toStartOf="@+id/name_view"
                app:layout_constraintTop_toBottomOf="@+id/name_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToOutline="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/status_view"
                tools:layout_editor_absoluteX="24dp">

                <TextView
                    android:id="@+id/rejected_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:backgroundTint="@color/rejected"
                    android:background="@drawable/round_lay"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    style="@style/Text2_15"
                    />

                <TextView
                    android:id="@+id/verified_badge"
                    style="@style/Caption1_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/round_lay"
                    android:backgroundTint="#1A016A60"
                    android:drawableStart="@drawable/check_ic"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/green"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dimen_8"
                    android:paddingVertical="@dimen/dimen_2"
                    android:text="Ishonchli"
                    android:textColor="@color/green"
                    app:layout_constraintEnd_toStartOf="@+id/fillPercent"
                    app:layout_constraintStart_toStartOf="@+id/name_view"
                    app:layout_constraintTop_toBottomOf="@+id/name_view" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_info_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_18"
                    android:text="@string/fill_profile"
                    app:icon="@drawable/edit"
                    app:iconGravity="textStart" />

                <LinearLayout
                    android:id="@+id/verify_info_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/round_lay"
                    android:backgroundTint="?colorSurfaceContainerLowest"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_18">

                    <TextView
                        style="@style/Headline2_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/info_ic"
                        android:drawablePadding="@dimen/dimen_8"
                        android:text="Ma'lumotlarni tasdiqlang"
                        android:textColor="?colorOnSurface"
                        app:drawableTint="@color/black" />

                    <TextView
                        style="@style/Subtitle1_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:text="Ilovada ishonchli bo'ling"
                        android:textColor="?colorOnSurfaceVariant" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/verify_button"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:text="@string/tasdiqlash"
                        app:icon="@drawable/arrow_right"
                        app:iconGravity="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/premium_active_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/round_lay"
                    android:backgroundTint="?colorSurfaceContainerLowest"
                    android:elevation="4dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_12">

                    <TextView
                        style="@style/Headline3_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_8"
                        android:drawableTint="?colorPrimary"
                        android:text="@string/premium"
                        android:textColor="?colorPrimary"
                        app:drawableEndCompat="@drawable/star_ic" />

                    <TextView
                        android:id="@+id/premiumExpireDate"
                        style="@style/Subtitle1_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:textColor="?colorOnSurfaceVariant" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/premium_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_2"

                    android:layout_marginTop="@dimen/dimen_12"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/round_lay"
                    android:backgroundTint="?colorSurfaceContainerLowest"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_12">

                    <TextView
                        style="@style/Title3_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premiumda ko'proq"
                        android:textColor="?colorOnSurface" />


                    <TextView
                        style="@style/Headline3_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:drawableStart="@drawable/check_ic"
                        android:drawablePadding="8dp"
                        android:text="@string/chat_preium"
                        android:textColor="?colorPrimary"
                        app:drawableTint="@color/green" />


                    <TextView
                        style="@style/Subtitle3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="So'rovingizni qabul qilgan nomzodlar bilan cheksiz suxbatlashing"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:textColor="?colorOnSurfaceVariant"
                        app:drawableTint="@color/green" />
                    <TextView
                        style="@style/Headline3_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:drawablePadding="8dp"
                        android:text="@string/reklama_yo_q"
                        android:textColor="?colorPrimary"
                        app:drawableStartCompat="@drawable/check_ic"
                        app:drawableTint="@color/green" />
                    <TextView
                        style="@style/Subtitle3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="Halaqit berayotgan reklamalar ketadi"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:textColor="?colorOnSurfaceVariant"
                        app:drawableTint="@color/green" />

                    <TextView
                        style="@style/Headline3_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="1 oy davomida premium"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:textColor="?colorPrimary"
                        app:drawableStartCompat="@drawable/check_ic"
                        app:drawableTint="@color/green" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/premium_button"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:text="@string/premiumga_o_tish"
                        app:icon="@drawable/star_ic"
                        app:iconGravity="textStart"
                        app:layout_constraintTop_toBottomOf="@+id/edit_info_button" />

                </LinearLayout>

                <TextView
                    android:id="@+id/disliked"
                    style="@style/Text1_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:drawablePadding="@dimen/dimen_24"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/dimen_14"
                    android:text="Yoqmagan nomzodlar"
                    android:textColor="?colorOnSurface"
                    app:drawableStartCompat="@drawable/hand_dilike"
                    app:drawableTint="?colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOutlineVariant" />

                <TextView
                    android:id="@+id/boglanish_button"
                    style="@style/Text1_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_24"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/dimen_14"
                    android:text="@string/biz_bilan_bog_lanish"
                    android:textColor="?colorOnSurface"
                    app:drawableStartCompat="@drawable/admin_ic"
                    app:drawableTint="?colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOutlineVariant" />

                <TextView
                    android:id="@+id/rate_button"
                    style="@style/Text1_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_24"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/dimen_14"
                    android:text="@string/programmani_baholash"
                    android:textColor="?colorOnSurface"
                    app:drawableStartCompat="@drawable/like_hand"
                    app:drawableTint="?colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOutlineVariant" />

                <TextView
                    android:id="@+id/sign_out"
                    style="@style/Text1_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_24"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/dimen_14"
                    android:text="@string/logout_"
                    android:textColor="?colorOnSurface"
                    app:drawableStartCompat="@drawable/arrow_back"
                    app:drawableTint="?colorPrimary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?colorOutlineVariant" />

                <TextView
                    android:id="@+id/delete_profile"
                    style="@style/Text1_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_24"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/dimen_14"
                    android:text="@string/profilni_o_chirish"
                    android:textColor="?colorOnSurface"
                    app:drawableStartCompat="@drawable/delete_ic"
                    app:drawableTint="?colorPrimary" />

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    app:adSize="BANNER"
                    app:adUnitId="ca-app-pub-8679920253502267/9580923961"
                    app:layout_constraintTop_toBottomOf="@+id/rate_button"
                    tools:layout_editor_absoluteX="24dp"></com.google.android.gms.ads.AdView>

            </LinearLayout>
            <TextView
                android:id="@+id/fillPercent"
                style="@style/Caption2_12"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8"
                android:text="Toldriligan 50%"
                android:textColor="?colorOnSurfaceVariant"
                app:layout_constraintBottom_toBottomOf="@+id/status_view"
                app:layout_constraintEnd_toEndOf="@+id/name_view"
                app:layout_constraintStart_toEndOf="@+id/status_view"
                app:layout_constraintTop_toTopOf="@+id/status_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <include
            android:id="@+id/auth_view"
            layout="@layout/auth_need_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/edit_info_button"
            app:layout_constraintStart_toStartOf="@+id/edit_info_button"
            app:layout_constraintTop_toBottomOf="@+id/edit_info_button" />

    </FrameLayout>

</layout>